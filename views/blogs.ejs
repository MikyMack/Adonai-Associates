    <script>
        let adonaiPopupShown = false;
        function adonaiShowPopup() {
            if (adonaiPopupShown) return;
            adonaiPopupShown = true;
            document.getElementById('adonai-popup-overlay').style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }
        function adonaiClosePopup() {
            document.getElementById('adonai-popup-overlay').style.display = 'none';
            document.body.style.overflow = '';
        }
        setTimeout(adonaiShowPopup, 20000);
        window.addEventListener('scroll', function() {
            if (adonaiPopupShown) return;
            const scrollY = window.scrollY || window.pageYOffset;
            const docHeight = document.documentElement.scrollHeight - window.innerHeight;
            if (docHeight > 0 && scrollY / docHeight > 0.4) {
                adonaiShowPopup();
            }
        });
        document.getElementById('adonai-popup-overlay').addEventListener('click', function(e) {
            if (e.target === this) adonaiClosePopup();
        });
    </script>
