                                    </div>
                                <% } %>
                                <div class="blog-content">
                                    <div class="blog-meta">
                                        <a class="author" href="#"><i class="far fa-user"></i>by <%= blog.author %></a>
                                        <a href="#"><i class="far fa-clock"></i>
                                            <%= blog.createdAt ? blog.createdAt.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) : '' %>
                                        </a>
                                    </div>
                                    <h2 class="blog-title">
                                        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                    </h2>
                                    <p class="blog-text">
                                        <%= blog.content.length > 250 ? blog.content.substring(0, 250) + '...' : blog.content %>
                                    </p>
                                    <a href="/blogs/<%= blog._id %>" class="th-btn style-border2 th-btn-icon">Read More</a>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="alert alert-info">No blog posts found.</div>
                    <% } %>
                    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                        <div class="th-pagination">
                            <ul class="">
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li>
                                        <a class="<%= i === currentPage ? 'active' : '' %>" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <li>
                                        <a class="next-page" href="?page=<%= currentPage + 1 %>">Next<i class="far fa-arrow-right ms-2"></i></a>
                                    </li>
