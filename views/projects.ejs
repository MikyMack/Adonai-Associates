            <div class="row g-4" id="projects-cards">
                <% if (projects && projects.length > 0) { %>
                    <% projects.forEach(function(project, idx) { %>
                        <div class="col-md-6 col-xl-4 d-flex">
                            <div class="card shadow-lg border-0 rounded-4 flex-fill" style="background: #fff; transition: box-shadow 0.2s, transform 0.2s;">
                                <% if (project.images && project.images.length > 0) { %>
                                    <div class="card-img-top position-relative" style="height: 260px; overflow: hidden;">
                                        <img 
                                            src="<%= project.images[0].url %>" 
                                            alt="<%= project.title %>" 
                                            style="width: 100%; height: 100%; object-fit: cover; cursor: pointer;"
                                            class="project-main-image"
                                            data-project-index="<%= idx %>"
                                            data-image-index="0"
                                        >
                                        <span style="position: absolute; top: 16px; left: 16px; background: rgba(255,179,0,0.92); color: #1a365d; font-weight: 600; padding: 4px 16px; border-radius: 12px; font-size: 1rem; letter-spacing: 0.5px;">
                                            <i class="fas fa-star" style="color: #ffb300;"></i> Featured
                                        </span>
                                    </div>
                                <% } else { %>
                                    <div class="card-img-top d-flex align-items-center justify-content-center" style="background: #e0e7ef; width: 100%; height: 260px; border-radius: 18px 18px 0 0;">
                                        <span style="color: #b0b7c3; font-size: 1.2rem;">No Image</span>
                                    </div>
                                <% } %>
                                <div class="card-body d-flex flex-column" style="background: #fff;">
                                    <h4 class="card-title mb-1" style="color: #1a365d; font-size: 1.35rem; font-weight: 700; letter-spacing: 0.5px;">
                                        <%= project.title %>
                                    </h4>
                                    <p class="card-text mb-2" style="color: #4f5b6e; font-size: 1.05rem;">
                                        <%= project.description %>
                                    </p>
                                    <% if (project.images && project.images.length > 1) { %>
                                        <div class="project-gallery d-flex gap-2 mb-3">
                                            <% project.images.slice(1, 4).forEach(function(img, imgIdx) { %>
                                                <img 
                                                    src="<%= img.url %>" 
                                                    alt="Project Image" 
                                                    style="width: 48px; height: 48px; object-fit: cover; border-radius: 8px; border: 2px solid #e0e7ef; cursor: pointer;"
                                                    class="project-gallery-image"
                                                    data-project-index="<%= idx %>"
                                                    data-image-index="<%= imgIdx + 1 %>"
                                                >
                                            <% }); %>
                                            <% if (project.images.length > 4) { %>
                                                <span class="more-images-indicator d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: #f8fafc; border-radius: 8px; border: 2px solid #e0e7ef; color: #ffb300; font-weight: 700; font-size: 1.1rem;">
                                                    +<%= project.images.length - 4 %>
                                                </span>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
