            <button id="closeFullscreenBtn" style="position:absolute;top:24px;right:32px;background:rgba(255,255,255,0.85);border:none;border-radius:50%;width:44px;height:44px;display:flex;align-items:center;justify-content:center;font-size:2rem;color:#1a365d;cursor:pointer;z-index:10001;">
                &times;
            </button>
            <button id="prevImageBtn" style="position:absolute;left:24px;top:50%;transform:translateY(-50%);background:rgba(255,255,255,0.7);border:none;border-radius:50%;width:44px;height:44px;display:flex;align-items:center;justify-content:center;font-size:2rem;color:#1a365d;cursor:pointer;z-index:10001;display:none;">
