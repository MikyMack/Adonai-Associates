            </button>
            <img id="fullscreenImage" src="" alt="Project Image" style="max-width:90vw;max-height:80vh;border-radius:18px;box-shadow:0 8px 32px rgba(255,179,0,0.18),0 2px 8px rgba(26,54,93,0.08);background:#fff;">
            <button id="nextImageBtn" style="position:absolute;right:24px;top:50%;transform:translateY(-50%);background:rgba(255,255,255,0.7);border:none;border-radius:50%;width:44px;height:44px;display:flex;align-items:center;justify-content:center;font-size:2rem;color:#1a365d;cursor:pointer;z-index:10001;display:none;">
                <i class="fas fa-chevron-right"></i>
            </button>
            <div id="fullscreenImageCaption" style="color:#fff;font-size:1.2rem;margin-top:18px;text-align:center;max-width:90vw;"></div>
        </div>

        <style>
            .card:hover {
                box-shadow: 0 8px 32px rgba(255,179,0,0.18), 0 2px 8px rgba(26,54,93,0.08) !important;
                transform: translateY(-4px) scale(1.02);
            }
            .project-main-image:hover, .project-gallery-image:hover {
                filter: brightness(0.92) contrast(1.1);
                box-shadow: 0 2px 8px rgba(255,179,0,0.18);
            }
            #imageFullscreenViewer {
                display: flex;
            }
            #imageFullscreenViewer[style*="display:none"] {
                display: none !important;
            }
            #fullscreenImageCaption {
                text-shadow: 0 2px 8px rgba(26,54,93,0.25);
            }
        </style>

        <script>
            // Pass projects data to JS
            var projectsData = <%- JSON.stringify(projects || []) %>;

            // Fullscreen viewer state
            var currentProjectIdx = null;
            var currentImageIdx = null;

            function showFullscreenImage(projectIdx, imageIdx) {
                var project = projectsData[projectIdx];
                if (!project || !project.images || !project.images[imageIdx]) return;
                currentProjectIdx = projectIdx;
                currentImageIdx = imageIdx;

                var viewer = document.getElementById('imageFullscreenViewer');
                var img = document.getElementById('fullscreenImage');
                var caption = document.getElementById('fullscreenImageCaption');
                img.src = project.images[imageIdx].url;
                img.alt = project.title + ' - Image ' + (imageIdx + 1);
                caption.textContent = project.title + (project.images.length > 1 ? ' (' + (imageIdx + 1) + ' of ' + project.images.length + ')' : '');

                // Show/hide prev/next
                var prevBtn = document.getElementById('prevImageBtn');
                var nextBtn = document.getElementById('nextImageBtn');
                prevBtn.style.display = (imageIdx > 0) ? 'flex' : 'none';
                nextBtn.style.display = (imageIdx < project.images.length - 1) ? 'flex' : 'none';

                viewer.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            }

            function closeFullscreenImage() {
                document.getElementById('imageFullscreenViewer').style.display = 'none';
                document.body.style.overflow = '';
                currentProjectIdx = null;
                currentImageIdx = null;
            }

            document.addEventListener('DOMContentLoaded', function () {
                // Main image click
                document.querySelectorAll('.project-main-image').forEach(function(img) {
                    img.addEventListener('click', function() {
                        var projectIdx = parseInt(this.getAttribute('data-project-index'));
                        var imageIdx = parseInt(this.getAttribute('data-image-index'));
                        showFullscreenImage(projectIdx, imageIdx);
                    });
                });
                // Gallery image click
                document.querySelectorAll('.project-gallery-image').forEach(function(img) {
                    img.addEventListener('click', function() {
                        var projectIdx = parseInt(this.getAttribute('data-project-index'));
                        var imageIdx = parseInt(this.getAttribute('data-image-index'));
                        showFullscreenImage(projectIdx, imageIdx);
                    });
                });

                // Close button
                document.getElementById('closeFullscreenBtn').addEventListener('click', closeFullscreenImage);

                // Prev/Next buttons
                document.getElementById('prevImageBtn').addEventListener('click', function() {
                    if (currentProjectIdx !== null && currentImageIdx > 0) {
                        showFullscreenImage(currentProjectIdx, currentImageIdx - 1);
                    }
                });
                document.getElementById('nextImageBtn').addEventListener('click', function() {
                    var project = projectsData[currentProjectIdx];
                    if (project && currentImageIdx < project.images.length - 1) {
                        showFullscreenImage(currentProjectIdx, currentImageIdx + 1);
                    }
                });

                // Close on background click (but not on image or buttons)
                document.getElementById('imageFullscreenViewer').addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeFullscreenImage();
                    }
                });

                // Close on ESC key
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') {
                        closeFullscreenImage();
                    }
                });
            });
        </script>
